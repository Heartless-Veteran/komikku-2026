{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": [
    "master"
  ],
  "labels": [
    "Dependencies"
  ],
  "rebaseWhen": "conflicted",
  "semanticCommits": "enabled",
  "packageRules": [
    {
      "groupName": "GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "pinDigests": true
    }
  ]
}
